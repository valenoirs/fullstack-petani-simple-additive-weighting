<div class="container-fluid">
  <div class="row mt-5 px-5">
    <div class="col">
      <h3>Kriteria</h3>
      <br />

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Kelompok Tani</th>
            <th scope="col">Kapan pupuk akan digunakan?</th>
            <th scope="col">Ketersediaan dana?</th>
            <th scope="col">Luas Lahan?</th>
            <th scope="col">Terdaftar eRDKK?</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody>
          <% petani.forEach((petani, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= petani.nama %></td>
            <% if (petani.kriteria[0] == 1) { %>
              <td>Bulan 9-11</td>
            <% } %>
            <% if (petani.kriteria[0] == 2) { %>
              <td>Bulan 5-7</td>
            <% } %>
            <% if (petani.kriteria[0] == 3) { %>
              <td>Bulan 1-3</td>
            <% } %>
            <% if (petani.kriteria[1] == 1) { %>
              <td>Tidak ada dana</td>
            <% } %>
            <% if (petani.kriteria[1] == 3) { %>
              <td>Ada dana</td>
            <% } %>
            <% if (petani.kriteria[2] == 1) { %>
              <td>0 - 0,5 hektare</td>
            <% } %>
            <% if (petani.kriteria[2] == 2) { %>
              <td>> 0,5 hektare</td>
            <% } %>
            <% if (petani.kriteria[2] == 3) { %>
              <td>> 1 hektare</td>
            <% } %>
            <% if (petani.kriteria[3] == 1) { %>
              <td>Tidak terdaftar</td>
            <% } %>
            <% if (petani.kriteria[3] == 3) { %>
              <td>Terdaftar</td>
            <% } %>
            <td>
              <button
                type="button"
                data-bs-toggle="modal"
                data-bs-target="#editPetani<%= petani.id %>"
                class="btn text-primary mb-1"
                style="border: 0; padding: 0"
              >
                <i class="bi bi-file-zip-fill"></i> edit
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% petani.forEach(petani => { %>
<!-- Edit Petani -->
<div class="modal fade" id="editPetani<%= petani.id %>" data-bs-backdrop="static" tabindex="-1" aria-labelledby="editPetani" aria-hidden="true">
<div class="modal-dialog modal-dialog-scrollable">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="editPetani">Ubah Kriteria</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form method="post" action="/petani?_method=PATCH">
            <div class="mb-3">
                <label for="nama" class="form-label">Kapan pupuk akan digunakan?</label>
                <select name="kriteria" class="form-select" aria-label="Default select example">
                  <option selected value="1">Bulan 9-11</option>
                  <option value="2">Bulan 5-7</option>
                  <option value="3">Bulan 1-3</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="id" class="form-label">Ketersediaan dana?</label>
                <select name="kriteria" class="form-select" aria-label="Default select example">
                  <option selected value="1">Tidak ada dana</option>
                  <option value="3">Ada dana</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="kode" class="form-label">Luas Lahan?</label>
                <select name="kriteria" class="form-select" aria-label="Default select example">
                  <option selected value="1">0 - 0,5 hektare</option>
                  <option value="2">> 0,5 hektare</option>
                  <option value="3">> 1 hektare</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="alamat" class="form-label">Terdaftar eRDKK</label>
                <select name="kriteria" class="form-select" aria-label="Default select example">
                  <option selected value="1">Tidak terdaftar</option>
                  <option value="3">Terdaftar</option>
                </select>
            </div>
    </div>
    <input type="hidden" name="id" value="<%= petani.id %>">

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                <button type="submit" class="btn btn-primary">Ubah Kriteria</button>
            </div>
        </form>
    </div>
</div>
</div>
<% }) %>